    "decoder": "npx ts-node src/decoder.ts"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^20.6.2",
    "esbuild": "0.19.3",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
