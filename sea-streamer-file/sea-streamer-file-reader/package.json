{
  "name": "sea-streamer-file-reader",
  "version": "0.3.1",
  "author": "Chris Tsang <chris.2y3@outlook.com>",
  "description": "Decoder for the SeaStreamer file format",
  "license": "MIT",
  "scripts": {
    "compile": "tsc -p ./",
    "lint": "eslint \"src/**/*.ts\"",
